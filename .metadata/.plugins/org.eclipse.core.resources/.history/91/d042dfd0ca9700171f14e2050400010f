fun main(args: Array<String>) {
	println("hello")
	println(makeMessage(2));

	val s: String = "junhee";
	println(s);
	
	val age : Int = 3;
	val strInt : String = "내 나이는 [" + age + "] 세 입니다.";
	println(strInt); 
}

fun makeMessage(msgType: Int): String {
	return if (msgType == 1) "1 입니다." else "잘못 선택하셨습니다."
}

